{
  "name": "@book-ranking/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "scrape": "tsx src/scrapers/run.ts",
    "scrape:test": "tsx src/scrapers/test.ts"
  },
  "dependencies": {
    "@book-ranking/shared": "workspace:*",
    "@fastify/cors": "^9.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@prisma/client": "^5.10.0",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.4.0",
    "fastify": "^4.26.0",
    "node-cron": "^3.0.3",
    "pino": "^8.18.0",
    "puppeteer": "^22.0.0",
    "redis": "^4.6.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "prisma": "^5.10.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
